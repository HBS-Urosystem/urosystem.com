<script context="module">
  //export const hydrate = false
  import { onMount } from 'svelte'
  import { get } from 'svelte/store'
  import { state, sitelang, pagepath } from '$lib/stores'
  import Nav from '$lib/Nav.svelte'
  import Footer from '$lib/Footer.svelte'
  import Cookies from '$lib/Cookies.svelte'

  export const load = async ({ page, fetch }) => {
    let { lang, path } = {...page.params}
    //path = !!path && path !== 'undefined' && path + '/' || ''
    //if (!path) path = 'index'
    //console.log('path_l',`/${lang}/${path}/cms.json`)
		//const url = `/${lang}/${path}/cms.json`
		//let url = (!!lang ? '/'+lang : '') + (!!path ? '/'+path : '') + '/cms.json'
    let u = []
		if (!!path) {
      u.push(lang)
      u.push(path)
    } else {
      u.push(lang || get(sitelang))
    }
    u.push('cms.json')
		const url = u.join('/')
    console.log('fetch(url)', url)
		let res = await fetch(url)
      .then(
        function(res) {
          if (res.status !== 200) {
            console.log('Looks like there was a problem. Status Code: ' +
            res.status)
            return
          }

          // Examine the text in the response
          res.json().then(function(result) {
            console.log('result_l1',result.post.id)
            if (!!result.thislang) return {
              props: {
                result: result,
                lang: result.thislang.id,
                path: path
              }
            }
          })
        }
      )
      .catch(function(err) {
        //console.log('Fetch Error :-S', err)
        console.log(`Could not load ${url}`, err)
        let url = get(sitelang) + (!!lang ? '/'+lang : '') + '/cms.json'
        console.log(`Trying ${url}`)
        let res = fetch(url)
        .then(
          function(res) {
            if (res.status !== 200) {
              console.log('2 Looks like there was a problem. Status Code: ' +
              res.status)
              return
            }

            // Examine the text in the response
            res.json().then(function(result) {
              console.log('result_l2',result.thislang)
              if (result.thislang) return {
                props: {
                  result: result,
                  lang: result.thislang.id,
                  path: lang
                }
              }
            })
          }
        )
      })


		/*if (res.ok) {
      const result = await res.json()
      console.log('result_l',result.post)

			if (result.thislang) return {
				props: {
          result: result,
          lang: lang,
          path: path
        }
			}
		}*/
    /*    console.log(`Could not load ${url}`)
    console.log(`Trying /${get(sitelang)}/${lang}/cms.json`)

    res = await fetch(`/${get(sitelang)}/${lang}/cms.json`)
		if (res.ok) {
      const result = await res.json()
      console.log('result_l2',result)

			if (result.thislang) return {
				props: {
          result: result,
          lang: get(sitelang),
          path: lang
        }
			}
		}*/
    //console.log(`Could not load anything!`,get(sitelang))

    /*res = await fetch(`/${get(sitelang)}/cms.json`)
		if (res.ok) {
      const result = await res.json()
      console.log('result_l3',result.post)

			if (result.thislang) return {
				props: {
          result: result,
          lang: get(sitelang),
          path: ''
        }
			}
		}

		return {
			status: res.status,
			error: new Error(`Could not load ${url}`)
		}*/
  }
</script>
<script>
  export let result, lang, path
  /*$: */$state = result
  /*$: */$pagepath = path
  /*$: */if (!!lang && lang != 'undefined') $sitelang = lang
  $: console.log('__layout $state:',$state)
  //let thislang = {dir: 'ltr'}
	onMount(() => {
    //thislang = $state.thislang
    document.querySelector('html').dir = $state.thislang.dir
    document.querySelector('html').lang = $sitelang
    console.log($sitelang)
	});
</script>

